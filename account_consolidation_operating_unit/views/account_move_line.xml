<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_consolidation.view_move_form"/>
        <field name="groups_id" eval="[(4,ref('operating_unit.group_multi_operating_unit'))]"/>
        <field name="arch" type="xml">
            <field name="consol_analytic_account_id" position="after">
                <field name="consol_operating_unit_id" />
            </field>
        </field>
    </record>

    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">account.move.line.tree.conso.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account_consolidation.view_move_line_tree"/>
        <field name="groups_id" eval="[(4,ref('operating_unit.group_multi_operating_unit'))]"/>
        <field name="arch" type="xml">
            <field name="consol_analytic_account_id" position="after">
                <field name="consol_operating_unit_id" />
            </field>
        </field>
    </record>
</odoo>
